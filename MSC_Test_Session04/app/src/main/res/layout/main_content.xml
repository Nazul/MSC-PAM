<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/popupButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:drawableTop="@mipmap/ic_launcher"
        android:text="@string/textPopupMenu"
        android:textAllCaps="false"
        android:onClick="showPopupMenu" />

    <Button
        android:id="@+id/showDialogButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/popupButton"
        android:drawableTop="@mipmap/ic_launcher"
        android:text="@string/textShowDialog"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/alertDialogButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/showDialogButton"
        android:drawableTop="@mipmap/ic_launcher"
        android:text="@string/textAlertDialog"
        android:textAllCaps="false" />

</RelativeLayout><!-- EOF -->